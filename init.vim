source $HOME/.config/nvim/plug-config/coc.vim
source $HOME/.config/nvim/plug-config/plugs.vim
source $HOME/.config/nvim/plug-config/remaps.vim

syntax on

set noerrorbells
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nowrap
set smartcase
set noswapfile
set nobackup
set undodir=~/.config/nvim/undodir
set undofile
set noshowmode
set number
set mouse=a

colorscheme gruvbox
set background=dark

